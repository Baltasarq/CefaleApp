<?xml version="1.0" encoding="utf-8"?>
<form>
    <q id="isFemale" value="bool" text="¿Hombre o mujer?">
        <opt value="false" text="Hombre" w="0.05" goto="howManyDaysPerMonth" />
        <opt value="true" text="Mujer" w="0.15" goto="howManyDaysPerMonth" />
    </q>

    <q id="howManyDaysPerMonth" value="int" text="¿Cuántos episodios de dolor de cabeza incapacitante ha experimentado?">
        <opt value="6" text="Menos de cinco episodios." goto="hasHistory" />
        <opt value="7" text="Más de cinco episodios." goto="hasHistory" />
    </q>

    <q id="hasHistory" value="bool" text="¿En cuanto a antecedentes?">
        <opt value="false" text="No hay antecedentes familiares de migraña"
            goto="isUnilateral" />
        <opt value="true" text="Sí hay antecedentes familiares de migraña"
            goto="isUniLateral" />
    </q>

    <q id="isUnilateral" value="bool"
        text="¿Cómo es el dolor de cabeza?">
        <opt value="false" text="El dolor abarca toda la cabeza."
             goto="isGeneralized" />
        <opt value="true" text="Dolor unilateral, en la sien o tras el ojo."
             goto="isPulsing" />
    </q>

    <q id="isGeneralized" value="bool"
        text="En cuanto al dolor en toda la cabeza">
        <opt value="false" text="No es un dolor opresivo en toda la cabeza"
             goto="isPulsing"/>
        <opt value="true"
                text="Se trata de un dolor opresivo, que puede describirse como un casco o venda muy apretada alrededor de la cabeza"
                goto="diagnostic_depression"/>
    </q>

    <q id="diagnostic_depression" value="str"
        text="Diagnóstico: depresión."/>

    <q id="isPulsing" value="bool"
        text="¿El dolor es pulsátil o continuo?">
        <opt value="false"
             text="El dolor es continuo en intensidad."
             goto="soundPhobia" />
        <opt value="true"
            text="Se trata de un dolor pulsátil."
            goto="soundPhobia" />
    </q>

    <q id="soundPhobia" value="bool"
        text="¿El dolor aumenta con los sonidos fuertes?">
        <opt value="false"
             text="No hay diferencia con los ruidos."
             goto="photoPhobia" />
        <opt value="true"
             text="Sensibilidad a los ruidos."
             goto="photoPhobia" />
    </q>

    <q id="photoPhobia" value="bool"
        text="¿El dolor aumenta con la exposición a la luz?">
        <opt value="false"
            text="No hay diferencia con la luz."
            goto="restImproves" />
        <opt value="true"
            text="Mayor sensibilidad a la luz."
            goto="restImproves" />
    </q>

    <q id="restImproves" value="bool"
        text="¿El dolor se alivia con el reposo?">
        <opt value="false"
            text="No hay diferencia en el dolor haciendo reposo."
            goto="diagnostic_cefalea" />
        <opt value="true"
            text="Con reposo el dolor mejora o incluso desaparece."
            goto="diagnostic_cefalea" />
    </q>

    <q id="diagnostic_cefalea" value="str"
        text="Diagnóstico: migraña."/>
</form>
