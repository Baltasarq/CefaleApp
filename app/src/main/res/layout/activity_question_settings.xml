<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_show_questions"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <CheckBox    android:id="@+id/chkShowNotesQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_show_notes_question"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <CheckBox    android:id="@+id/chkShowAgeQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_show_age_question"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <CheckBox    android:id="@+id/chkShowSizeQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_show_size_questions"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <CheckBox    android:id="@+id/chkShowPressureQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_show_pressure_questions"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
    </LinearLayout>
</ScrollView>
